<?xml version="1.0" encoding="utf-8"?>
<resources>
	<style name="AppFullScreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowActionBar">false</item>
		<item name="android:windowFullscreen">false</item>
		<item name="android:windowContentOverlay">@null</item>
		<item name="android:colorBackground">#000000</item>
		<item name="android:statusBarColor">#00000000</item>

		<!-- неактивное состояние ползунка -->
		<item name="colorSwitchThumbNormal">#28292e</item>
		<!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
		<item name="android:colorForeground">#141414</item>


		<item name="colorControlActivated">@android:color/holo_orange_dark</item>
	</style>



	<style name="MySwitch" parent="Theme.AppCompat.Light">
		<!-- активное состояние (30% прозрачности для фона) -->
		<item name="colorControlActivated">#455A64</item>


		<!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
		<item name="android:colorForeground">@android:color/darker_gray</item>
	</style>


	<style name="MySwith" parent="Theme.AppCompat.Light">
		<!-- активное состояние (30% прозрачности для фона) -->
		<item name="colorControlActivated">@android:color/holo_orange_dark</item>

		<!-- неактивное состояние ползунка -->
		<item name="colorSwitchThumbNormal">@android:color/darker_gray</item>

		<!-- цвет дорожки для неактивного состояния (30% прозрачности) -->
		<item name="android:colorForeground">@android:color/darker_gray</item>
	</style>

	<!--без этого не работает полноэкранный диалог-->
	<!--https://stackoverflow.com/questions/28513616/android-get-full-width-for-custom-dialog-->
	<style name="mydialog"></style>

	<!--это просто тема для диалога-->
	<!--MyDialogTheme-->
	<style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog"> 
		<item name="android:padding">2dp</item>
	</style> 



</resources>
